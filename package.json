{
	"name": "zod-neverthrow",
	"version": "1.3.0",
	"description": "A lightweight TypeScript utility that integrates Zod schema validation with the Result type from neverthrow for streamlined robust error handling.",
	"type": "module",
	"sideEffects": false,
	"author": {
		"name": "Arumi Sakura",
		"url": "https://github.com/arumi-s"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/arumi-s/zod-neverthrow.git"
	},
	"keywords": [
		"typescript",
		"schema",
		"validation",
		"type",
		"inference",
		"zod",
		"neverthrow"
	],
	"publishConfig": {
		"access": "public"
	},
	"files": [
		"dist"
	],
	"main": "./dist/index.cjs",
	"types": "./dist/index.d.cts",
	"module": "./dist/index.js",
	"exports": {
		"./package.json": "./package.json",
		".": {
			"types": "./dist/index.d.cts",
			"import": "./dist/index.js",
			"require": "./dist/index.cjs"
		},
		"./v3": {
			"types": "./dist/v3/index.d.cts",
			"import": "./dist/v3/index.js",
			"require": "./dist/v3/index.cjs"
		},
		"./v4": {
			"types": "./dist/v4/index.d.cts",
			"import": "./dist/v4/index.js",
			"require": "./dist/v4/index.cjs"
		}
	},
	"scripts": {
		"build": "tsup --config tsup.config.ts",
		"test": "vitest run",
		"format": "prettier --write .",
		"prepublishOnly": "pnpm run build"
	},
	"license": "MIT",
	"devDependencies": {
		"@semantic-release/changelog": "^6.0.3",
		"@semantic-release/commit-analyzer": "^13.0.1",
		"@semantic-release/git": "^10.0.1",
		"@semantic-release/github": "^12.0.2",
		"@semantic-release/release-notes-generator": "^14.1.0",
		"@vitest/coverage-v8": "^4.0.8",
		"prettier": "^3.6.2",
		"semantic-release": "^25.0.2",
		"tsup": "^8.5.1",
		"typescript": "^5.9.3",
		"vite": "^7.2.2",
		"vitest": "^4.0.8"
	},
	"peerDependencies": {
		"neverthrow": "^8",
		"zod": "^3.25.0 || ^4.0.0"
	}
}
